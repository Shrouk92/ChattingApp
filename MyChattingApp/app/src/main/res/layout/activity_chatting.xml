<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="chattingbinding"
            type="com.example.mychattingapp.viewmodels.ChattingPageViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ChattingActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/msgrecyc"
            android:layout_width="402dp"
            android:layout_height="589dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/msgtxt"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="76dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box"
            android:padding="15dp"
            android:text="Type a message"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/msgrecyc">

        </EditText>

        <ImageView
            android:layout_width="42dp"
            android:layout_height="50dp"
            android:layout_marginTop="76dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_send_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/msgtxt"
            app:layout_constraintTop_toBottomOf="@+id/msgrecyc">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>